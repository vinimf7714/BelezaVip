@model List<BelezaVip.Models.AtendimentoViewModel>
@{
    ViewData["Title"] = "Agenda";
}

@{
    var ListT = Model.Where(x => x.IdProfissional == "1");

    var ListA = Model.Where(x => x.IdProfissional == "2");

    var ListS = Model.Where(x => x.IdProfissional == "3");
}

    <div class="row">
        <div class="col-sm-1" style="padding-left:20px;padding-right:0px">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th> HORA </th>
                    <tr>
                </thead>
                <tbody>
                    @foreach (var item in ListA)
                    {
                        string dt = @item.DataAtendimento.ToString("HH:mm"); ;

                        <tr><td>@dt</td></tr>
                    }
                </tbody>
            </table>
        </div>
