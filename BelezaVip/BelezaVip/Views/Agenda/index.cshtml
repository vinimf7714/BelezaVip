                <thead>
                    <tr>
                        <th> Thais </th>
                    <tr>
                </thead>
                <tbody>
                    @foreach (var item in ListT)
                    {
                        <tr style="width: 10px">
                            <td>
                                @if (item.NomeCliente.Equals("VAGO"))
                                {
                                    <a href="@Url.Action("", "CadAtendimento")">+</a>
                                }
                                else
                                {
